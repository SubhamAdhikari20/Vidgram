<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_logo_vector_png" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext1"
        android:layout_width="362dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/authentication_btn"
        android:text="Send Code"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="56dp"
        android:drawableLeft="@drawable/code_gang_logo"
        android:drawablePadding="3dp"
        android:fontFamily="sans-serif-black"
        android:text="Code Gang"
        android:textColor="@color/green"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignin"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/create_account_btn"
        android:text="Create Account"
        android:textAllCaps="false"
        android:contextClickable="false"
        android:textColor="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNext1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="199dp"
        android:text="Don't have account?"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNext1"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code1"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code2"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="354dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/code1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code3"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/code2"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code4"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/code3"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code5"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="354dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/code4"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="43dp"
        android:text="Enter verification code "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code6"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="354dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/code5"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="25dp"
        android:text="Didnâ€™t recieve a code?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNext1"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResend"
        android:layout_width="63dp"
        android:layout_height="29dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/nobg"
        android:text="Resend"
        android:textColor="@color/green"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/btnNext1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="79dp"
        android:text="Verification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
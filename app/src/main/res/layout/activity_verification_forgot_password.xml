<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.authentication.LoginActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/arrowButtonFP2"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_vidgram_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Verification"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textemailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:text="Enter verification code"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enterCodeButtonFP"
        android:layout_width="362dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/authentication_btn"
        android:text="Enter Code"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code1"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code1"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textemailaddress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code2"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/code1"
        app:layout_constraintTop_toBottomOf="@+id/textemailaddress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code3"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/code2"
        app:layout_constraintTop_toBottomOf="@+id/textemailaddress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code4"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/code3"
        app:layout_constraintTop_toBottomOf="@+id/textemailaddress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code5"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/code4"
        app:layout_constraintTop_toBottomOf="@+id/textemailaddress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/code6"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/authentication_text_field"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/code5"
        app:layout_constraintTop_toBottomOf="@+id/textemailaddress"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="25dp"
        android:text="Didnâ€™t recieve a code?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterCodeButtonFP"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resendButtonFP"
        android:layout_width="63dp"
        android:layout_height="29dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/nobg"
        android:text="Resend"
        android:textColor="@color/green"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/enterCodeButtonFP"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>